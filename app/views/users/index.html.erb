<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<div>
    <p>フォローリスト</p>
  </div>

  <div>
    <ul>
      <% @mates.each do |user| %>
        <%# 友達（互いにフォローしている）を一覧表示 %>
          <li>
                <p>Mate<br>image</p>
              <div>
                <p>ユーザーネーム : <%= link_to user.nickname, user_path(user.id) %></p>
              </div>
          </li>
      <% end %>
    </ul>
  </div><%# End of item-list-content %>

  <div>
    <p>User list</p>
  </div>
  <div>
    <ul>
      <% @users.each do |user| %>
        <%# 自分以外のユーザーを一覧表示 %>
        <% unless current_user.id == user.id %>
          <div>

            <li>
              <div>

                  <p>User<br>image</p>

                <div>
                  <p><%= link_to user.nickname, user_path(user.id) %></p>
                  <% if user.follow_request?(current_user, user) %>
                    <p></p>
                  <% end %>
                </div>
              </div>
            </li>

          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>