<div class="container">
  <h1 class="text-center mt-5">
    <span class="border-bottom">フォロー 一覧</span>
  </h1>
  <div class="row">
    <table class="table mt-5">
      <tr>
        <th>プロフィール画像</th>
        <th>ユーザー名</th>
        <th>年齢層</th>
      </tr>
       <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50), class: "mt-3 rounded-circle" %></td>
          <td><%= link_to user.nickname, user_path(user.id) %></td>
          <td><%= user.age %></td>
        </tr>
       <% end %>
    </table>
  </div>
  <h1 class="text-center mt-5">
    <span class="border-bottom">フォロワー 一覧</span>
  </h1>
  <div class="row">
    <table class="table mt-5">
      <tr>
        <th>プロフィール画像</th>
        <th>ユーザー名</th>
        <th>年齢層</th>
      </tr>
      <% @user.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(50,50), class: "mt-3 rounded-circle" %></td>
          <td><%= link_to user.nickname, user_path(user.id) %></td>
          <td><%= user.age %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>