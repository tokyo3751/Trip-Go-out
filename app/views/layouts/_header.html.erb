<header>
 <nav class="navbar navbar-expand navbar-light bg-info">
   <div class="container">
     <a class="navbar-brand" href="/"><span>Trip & Go out</span></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
              <i class="fas fa-user"></i>マイページ
              <% end %>
            </li>
            <li>
              <%= link_to posts_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-newspaper"></i>投稿一覧
              <% end %>
            </li>
            <li>
              <%= link_to new_post_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-plus-circle"></i>新規投稿
              <% end %>
            </li>
            <li>
              <%= link_to users_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-people-arrows"></i>ユーザー 一覧
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to admins_users_path, class: 'nav-link text-light' do %>
              <i class="fas fa-people-arrows"></i>ユーザー 一覧
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fas fa-plus-circle"></i>新規登録
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>
          <% end %>
         </ul>
      </div>
    </div>
  </nav>
</header>