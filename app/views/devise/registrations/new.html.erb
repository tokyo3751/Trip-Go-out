<div class="container">
  <h1 class="text-center mt-5">
    <span class="border-bottom">新規会員登録</span>
  </h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col mt-5 g-3 needs-validation novalidate">

      <div class="field form-group row">
         <%= f.label :nickname, "ニックネーム", class: "col-md-3" %>
         <%= f.text_field :nickname,autofocus: true, class: 'form-control col-md-3' %>
      </div>

      <div class="field form-group row">
        <%= f.label :age, "年齢層", class: "col-md-3" %>
        <%= f.select :age,[["10代", "10代"], ["20代", "20代"], ["30代", "30代"],["40代", "40代"],["50代", "50代"],["60代", "60代"],["70代", "70代"],["80代以上", "80代以上"]], include_blank: "選択して下さい", class: 'form-control col-md-3' %>
      </div>

      <div class="field form-group row">
          <%= f.label :gender, "性別", class: "col-md-3" %>
       <div class="col-md-3">
          <%= f.label :man, "男性" %>
          <%= f.radio_button :gender, :man %>
          <%= f.label :woman, "女性" %>
          <%= f.radio_button :gender, :woman %>
       </div>
      </div>


    <div class="field form-group row">
      <%= f.label :"メールアドレス", class: "col-md-3" %>
      <%= f.text_field :email, autofocus: true, placeholder: "samplie@example.com", autocomplete: "email" , autofocus: true, class: 'form-control col-md-3', required: true %>
    </div>

    <div class="field form-group row">
      <div class="col-md-3">
        <%= f.label :"パスワード"  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
       <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: 'form-control col-md-3', required: true %>
    </div>
    <div class="field form-group row">
      <%= f.label :"パスワード（確認用）", class: "col-md-3 " %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , autofocus: true, class: 'form-control col-md-3', required: true %>
    </div>
  </div>
  <div class="actions text-center mt-5">
    <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
  </div>
  <% end %>
  <div class="row ml-3 mt-5">
    <h5 class="bg-light text-dark text-center">既に登録済みの方</h5>
  </div>
  <div class="offset-1 mt-3">
    <%= link_to "こちら", new_user_session_path %>からログインしてください。
  </div>
  <div class="offset-1 mt-3">
    もしくは<%= link_to "こちら", users_guest_sign_in_path, method: :post %>からゲストユーザーでログインして下さい。
  </div>
</div>