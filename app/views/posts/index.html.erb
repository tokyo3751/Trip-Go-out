<div class="card-list-container py-5">
  <h1 class="border-bottom mt-3 col-md-3 text-center">投稿一覧</h1>
  <% @posts.each do |posts| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= link_to post_path(posts.id) do %>
        <%= image_tag posts.get_image(300,300), class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
           <%= image_tag posts.user.get_profile_image(100,100), class: "mt-3 rounded-circle" %>
          </div>
          <div class="col-10">
            <p class="card-title">投稿者：<%= posts.user.nickname %></p>
            <p class="card-text">場所名：<%= posts.place %></p>
            <p class="card-text">住所 : <%= link_to posts.address, post_path(posts.id) %></p>
            <p class="card-text">投稿日 : <%= posts.created_at.strftime('%Y/%m/%d') %></p>
            <p class="card-text">評価 : <%= posts.evaluation %>点</p>
            <div id="star-rate<%= posts.id%>"></div>
            <script>
              $('#star-rate<%= posts.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf    : '<%= asset_path('star-half.png') %>',
                half      : true,
                readOnly: true,
                score: <%= posts.evaluation %>,
              });
            </script>
            <p class="card-text">コメント：<%= posts.comment %></p>
            <p class="card-text"><%= link_to "#{posts.reply.count} コメント", post_path(posts.id) %></p>
            <p class="card-text"><%= render "favorite", posts: posts %></p>
          </div>
        </div>
      </div>
   </div>
  <% end %>
</div>
