<div class="container">
  <h1 class="text-center my-5">新規投稿</h1>
    <div class="row">
         <% if @post.errors.any? %>
            <h3><%= @post.errors.count %>件のエラーが発生しました</h3>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
         <% end %>
      <%= render "post", posts: @post %>
    </div>
</div>